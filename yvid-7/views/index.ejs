<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white">
      <div class="form p-10">
        <form action="/create" method="post">
          <input
            class="block w-full px-5 py-2 bg-zinc-800 rounded-md outline-none border-2"
            type="text"
            placeholder="Title goes here"
            name="title"
          />
          <textarea
            class="resize-none w-full px-5 py-2 bg-zinc-900 rounded-md outline-none border-2 mt-2"
            placeholder="write task"
            name="details"
            id=""
          ></textarea>
          <input
            class="bg-blue-600 mt-2 px-5 py-2 rounded-md mt-2"
            type="submit"
            value="create task"
          />
        </form>
      </div>
      <div class="tasks p-10 flex flex-wrap gap-4">
        <% if(files.length > 0){ %>
            <% files.forEach(function(val){ %>
                <div class="task w-72 px-4 py-4 rounded-md bg-zinc-800">
                    <h1 class="text-white text-3xl tracking-tighter">
                      <%= val %>
                    </h1>
                    <a class="text-blue-500 inline-block mt-2" href="/file/<%= val %>">Read More</a>
                  </div>
           <% }) %>
          <% } else { %>
            <h3 class="text-zinc-600">no tasks here</h3>
        <% }  %>
      </div>
    </div>
  </body>
</html>
