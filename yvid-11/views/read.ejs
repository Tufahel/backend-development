<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
      <div class="nav mb-4">
        <a class="text-blue-500" href="/">Back to home</a>
      </div>
      <h1 class="mb-2 text-3xl">All Users</h1>
      <div class="users flex flex-wrap gap-3">
        <% if(users.length > 0){ %>
        <% users.forEach(function(user){ %>
        <div class="user max-w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-52 rounded-lg bg-zinc-500 overflow-hidden">
            <img class="w-full h-full object-cover" src="<%= user.image %>" alt="">
          </div>
          <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex gap-3 mt-4">
            <a href="" class="text-zinc-600">Edit User</a>
            <a href="/delete/<%= user._id %>" class="text-red-500">Delete User</a>
          </div>
        </div>
        <% }) %>
        <% } else { %>
            <h3 class="text-zinc-500">No users yet</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
